  body
    nav.navbar.navbar-inverse
      div.container-fluid
        div.navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/') PollNow
        div(id='navbar', class='navbar-collapse collapse')
          ul.nav.navbar-nav
            li
              a(href='/') Home
          ul.nav.navbar-nav.navbar-right
            if loggedIn
              li
                a.dropdown-toggle(href='#', data-toggle='dropdown')
                  | Profile
                  span.caret
                ul.dropdown-menu(role='menu', aria-labelledby='menu1')
                  li(role='presentation')
                    a(role='menuitem', tabindex='-1', href='/profile') GitHub Info.
              li
                a(href='/logout')
                  span.glyphicon.glyphicon-log-out
                  |  Logout
            else
              li
                a(href='/login')
